<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alejandrogs.stylemichelle.MainActivity">

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="cursive"
        android:text="Michelle"
        android:textAlignment="center"
        android:textSize="58dp" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/Edi_layout"
        android:layout_marginTop="12dp"
        android:layout_width="368dp"
        android:layout_below="@+id/label"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario: "
            android:id="@+id/edit_usu"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_pass"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Edi_layout"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/edit_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ContraseÃ±a: "
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <Button

        android:layout_width="180dp"
        android:layout_height="60dp"
        android:id="@+id/btn_login"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:theme="@style/MyButton"
        android:layout_below="@+id/layout_pass"
        android:text="Actualizar"/>


</RelativeLayout>
